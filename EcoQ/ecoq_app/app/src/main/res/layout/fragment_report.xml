<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/scrollView"
    tools:context=".ReportFragment">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/green_border"
            android:backgroundTint="#fffcfb">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textColor="@color/green_trees"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/upload"
                android:id="@+id/upload"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/issueTitle"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:hint="Enter a title"
                android:gravity="start|center_vertical"
                android:textColor="@color/black"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/issueTypeSpinner"
                android:background="@drawable/green_border"
                android:layout_marginTop="12dp"
                android:padding="16dp"
                android:gravity="start|center_vertical"
                android:drawSelectorOnTop="true"
                android:entries="@array/issueTypes"/>

            <!--android:prompt="@string/spin"-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/issueDescription"
                android:background="@drawable/green_border"
                android:layout_marginTop="12dp"
                android:padding="16dp"
                android:hint="Enter description"
                android:gravity="start|center_vertical"
                android:textColor="@color/black" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Submit"
                android:backgroundTint="@color/green_trees"
                android:id="@+id/submitButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"

                app:cornerRadius = "20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>

